<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- The main content view -->
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" />

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingBottom ="0dp"

                >

                <FrameLayout
                    android:background="@drawable/custombackground2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="0dp"
                    android:layout_marginLeft ="8dp"
                    android:layout_marginRight ="8dp"
                    android:layout_marginTop ="8dp"
                    android:layout_weight="2"
                    >
                    <FrameLayout

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom ="8dp"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"

                            >
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:paddingLeft="8dp"
                                >

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@color/transparent"
                                    android:text="Ingredientes Restantes"

                                    android:gravity="left"
                                    android:textSize="21.0816951782dp"
                                    android:paddingTop="8dp"
                                    android:textColor="#000000"
                                    android:layout_marginBottom="4dp"
                                    />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    >
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="4dp"
                                        android:layout_height="35dp">

                                        <LinearLayout
                                            android:layout_width="35dp"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/custombackground3" />
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"

                                            android:text="@string/ejemplo"


                                            android:textSize="15.3321419477dp"
                                            android:paddingTop="0dp"

                                            android:paddingLeft="8dp"
                                            android:textColor="#000000"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:layout_height="35dp">

                                        <LinearLayout
                                            android:layout_width="35dp"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/custombackground3" />
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:background="@color/transparent"
                                            android:text="@string/ejemplo"

                                            android:gravity="left"
                                            android:textSize="15.3321419477dp"
                                            android:paddingTop="0dp"
                                            android:paddingLeft="8dp"
                                            android:textColor="#000000"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:layout_height="35dp">

                                        <LinearLayout
                                            android:layout_width="35dp"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/custombackground3" />
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:background="@color/transparent"
                                            android:text="@string/ejemplo"

                                            android:gravity="left"
                                            android:textSize="15.3321419477dp"
                                            android:paddingTop="0dp"
                                            android:paddingLeft="8dp"
                                            android:textColor="#000000"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:layout_height="35dp">

                                        <LinearLayout
                                            android:layout_width="35dp"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/custombackground3" />
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:background="@color/transparent"
                                            android:text="@string/ejemplo"

                                            android:gravity="left"
                                            android:textSize="15.3321419477dp"
                                            android:paddingTop="0dp"
                                            android:paddingLeft="8dp"
                                            android:textColor="#000000"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:layout_height="35dp">

                                        <LinearLayout
                                            android:layout_width="32dp"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/custombackground3" />
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:background="@color/transparent"
                                            android:text="@string/ejemplo"

                                            android:gravity="left"
                                            android:textSize="15.3321419477dp"
                                            android:paddingTop="0dp"
                                            android:paddingBottom="0dp"
                                            android:paddingLeft="8dp"
                                            android:textColor="#000000"
                                            />
                                    </LinearLayout>




                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:background="@drawable/custombackground4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom ="8dp"
                        >


                    </FrameLayout>


                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/transparent"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/custombackground"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"

                    android:paddingBottom ="8dp"

                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="184dp"

                        android:paddingLeft="8dp"
                        >

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="31dp"

                            android:text="Mercado mas cercano"
                            android:gravity="left"
                            android:textSize="21.0816951782dp"
                            android:paddingTop="8dp"
                            android:textColor="#000000"
                        />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="31dp"

                            android:text="Mercado el Grande - 44 m"
                            android:gravity="left"
                            android:textSize="21.0816951782dp"
                            android:paddingTop="8dp"
                            android:textColor="#000000"
                        />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="35dp"

                            android:text="20 min 35 seg"
                            android:gravity="left"
                            android:textSize="21.0816951782dp"
                            android:paddingTop="8dp"
                            android:textColor="#000000"
                        />





                    </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <!-- The navigation drawer -->
        <LinearLayout android:id="@+id/left_drawer"
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#ffffff">

            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="0dp"
                android:text="Mi despensa"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="0dp"
                android:text="Recetas"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="0dp"
                android:text="Cocina Reciente"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="0dp"
                android:text="Disponibles"

                />




        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>


</android.support.constraint.ConstraintLayout>

